<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePetPicture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:contentDescription="@string/contentDescriptionImagePetPicture"
            android:src="@drawable/ic_no_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/gray700"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imagePetPicture"
            app:layout_constraintTop_toTopOf="@+id/imagePetPicture"
            tools:text="Braddy" />

        <TextView
            android:id="@+id/textPetBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/amber_700"
            app:layout_constraintStart_toEndOf="@+id/imagePetPicture"
            app:layout_constraintTop_toBottomOf="@+id/textPetName"
            tools:text="Husky Siberiano" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>